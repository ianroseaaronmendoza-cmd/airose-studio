{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",                       // ✅ React 17+ automatic JSX runtime
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // ✅ Add these two lines ↓
    "types": ["react", "react-dom"],         // Ensures hooks + JSX types available
    "lib": ["DOM", "DOM.Iterable", "ESNext"],// Fixes Selection / Node type errors

    // ✅ Base imports
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@api/*": ["api/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src", "src/lib/config.ts"],
  "exclude": ["node_modules", "dist"]
}
